void saveGame(){
  vector<string> data;
  Player * player;
  string s;
  Card * card;

  //drawPile data
  while(!drawPile->isEmpty()){
    card = drawPile->remove();
    s += to_string(card->getVal());
  }

  //buildPile data
  for(int i = 0; i < 4; i++){
    while(!buildPile[i]->isEmpty()){
      card = buildPile[i]->remove();
      s += to_string(card->getVal());
    }
  }

  data.push_back(s);
  s.clear();
  
  //Players data   if card == nullptr, using -1
  for(int i = 0; i < players.size(); i++){
    player = players[i];
    s += player->getName();

    //hand data
    for(int j = 0; j < 5; j++){
      card = player->removeCardFromHand(j);

      if(card == nullptr)
	s += to_string(-1);
      else
	s += to_string(card->getVal());
    }

    //discardPile data
    for(int j = 0; j < 4; j++){
      while(!player->getDiscardPile()[j]->isEmpty()){
	card = player->getDiscardPile()[j]->remove();
	s += card->getVal();
      }
    }

    while(!player->getStockPile()->isEmpty()){
      card = player->getStockPile()->remove();
      s += card->getVal();
    }

    data.push_back(s);
    s.clear();
  }
  
  cout<<"Save File name: ";
  cin >> s;
  cout<<endl;

  fstream fs(s, ios::out);

  for(auto it = data.begin(), it != data.end(); it++){
    fs.write(*it);
  }

  fs.close();
}